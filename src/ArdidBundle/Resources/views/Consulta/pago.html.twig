{% extends '::base2.html.twig' %}
{% block title %}Ardid app{% endblock %}
{% block content %}
    <link rel="stylesheet" href="{{ asset('recursos/plugins/datatables/dataTables.bootstrap.css') }}">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lista: Pago</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tipo</th>
                                <th>Numero</th>
                                <th>Empresa</th>                                
                                <th>Grupo</th>
                                <th>Zona</th>
                                <th>Periodo</th>
                                <th>Desde</th>
                                <th>Hasta</th>
                                <th>Salario</th>
                                <th>Deducciones</th>
                                <th>Devengados</th>
                                <th>Neto</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for arPagos in arPagos %}
                                <tr>
                                    <th scope="row">{{arPagos.codigoPagoPk}}</th> 
                                    <td>{{arPagos.pagoTipoRel.nombre}}</td>
                                    <td style="text-align: right">{{arPagos.numero}}</td>
                                    <td>{{arPagos.empresaRel.nombre}}</td>
                                    <td>{{arPagos.grupoDePago}}</td>
                                    <td>{{arPagos.zona}}</td>
                                    <td>{{arPagos.periodoPago}}</td>                                    
                                    <td>{{arPagos.fechaDesde|date('Y-m-d')}}</td>
                                    <td>{{arPagos.fechaHasta|date('Y-m-d')}}</td>                       
                                    <td style="text-align: right">{{ arPagos.vrSalario | number_format(0, '.', ',') }}</td>
                                    <td style="text-align: right">{{ arPagos.vrDeducciones | number_format(0, '.', ',') }}</td>
                                    <td style="text-align: right">{{ arPagos.vrSalario | number_format(0, '.', ',') }}</td>
                                    <td style="text-align: right">{{ arPagos.vrNeto | number_format(0, '.', ',') }}</td> 
                                    <td style="text-align: center"><a href="{{ path('consulta_pago_detalle', { 'codigoPago': arPagos.codigoPagoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                                </tr>
                            {% endfor %}                           
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>   
{% endblock %}

