{% extends '::base2.html.twig' %}
{% block title %}Ardid app{% endblock %}
{% block content %}
     
    <link rel="stylesheet" href="{{ asset('recursos/plugins/datatables/dataTables.bootstrap.css') }}">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lista: Contrato certificado de ingresos</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Empresa</th>
                                <th>Numero</th>
                                <th>Identificacion</th>
                                <th>nombre</th>
                                <th>Desde</th>
                                <th>Hasta</th>
                                <th>Cargo</th>
                                <th>Grupo pago</th>
                                <th style="text-align: right">Salario</th>
                                <th></th>
                            </tr>
                        </thead>
                        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
                          {{ form_errors(form) }}
                        <tbody>
                            {% for arContratos in arContratos %}
                                <tr>
                                    <th scope="row">{{arContratos.codigoContratoPk}}</th> 
                                    <td>{{arContratos.empresaRel.nombre}}</td>
                                    <td>{{arContratos.numero}}</td>
                                    <td>{{arContratos.empleadoRel.identificacionNumero}}</td>
                                    <td>{{arContratos.empleadoRel.nombreCorto}}</td>
                                    <td>{{arContratos.fechaDesde|date('Y-m-d')}}</td>
                                    <td>{{arContratos.fechaHasta|date('Y-m-d')}}</td>   
                                    <td>{{arContratos.cargo}}</td>
                                    <td>{{arContratos.grupoPago}}</td>
                                    <td>{{arContratos.vrSalario | number_format(0, '.', ',') }}</td>
                                    <td><button class="btn btn-default btn-xs" type="submit" name="opImprimir" value="{{ arContratos.codigoContratoPk }}"><b>Imprimir</b></button>     </td>
                                    </tr>
                            {% endfor %}                         
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>   
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

